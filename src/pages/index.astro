---
const { url } = Astro;

const response = await fetch(`${url}api`);
const secret = await response.text();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Astro</h1>
		<p>{JSON.stringify({secret})}</p>
	</body>
</html>
